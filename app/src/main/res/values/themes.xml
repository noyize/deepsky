<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deepsky" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_10</item>
        <item name="colorPrimaryVariant">@color/blue_10</item>
        <item name="colorOnPrimary">@color/blue_95</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green_40</item>
        <item name="colorSecondaryVariant">@color/dark_green_30</item>
        <item name="colorOnSecondary">@color/blue_10</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:navigationBarColor" >@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/teal_10</item>
        <item name="colorOnSurface">@color/blue_90</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Deepsky.BottomSheetDialog</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/blue_10</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>  # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.Deepsky</item>  # Required.
    </style>
</resources>